<?xml version="1.0" encoding="UTF-8"?>

<web-app version="2.4"
	xmlns="http://java.sun.com/xml/ns/j2ee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee 
	http://java.sun.com/xml/ns/j2ee/web-app_2_4.xsd" >
	
	<!--START: CONTEXT PARAMS-->
	<context-param>
		<param-name>contextConfigLocation</param-name>
		<param-value>/WEB-INF/Emmet-security.xml</param-value>
	</context-param>
	<context-param>
		<param-name>contextConfigProperties</param-name>
		<param-value>classpath:build.properties,classpath:default-emmet-substitution.properties,classpath:default-danno-substitution.properties,classpath:default-dannotate-substitution.properties,classpath:substitution.properties</param-value>
	</context-param>

	<listener>
		<listener-class>au.edu.diasb.chico.config.ContextLoaderListener</listener-class>
	</listener>


	<filter>
		<filter-name>Encoding Filter</filter-name>
		<filter-class>org.springframework.web.filter.CharacterEncodingFilter</filter-class>
		<init-param>
			<param-name>encoding</param-name>
			<param-value>UTF-8</param-value>
		</init-param>

	</filter>
	<filter-mapping>
		<filter-name>Encoding Filter</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>
	
	
	<!-- Jetty Asynchronous Proxy Client
		http://docs.codehaus.org/display/JETTY/Asynchronous+Proxy+Servlet
		-->
<!--	<servlet>
		<servlet-name>SesameProxy</servlet-name>
		<servlet-class>org.mortbay.proxy.AsyncProxyServlet$Transparent</servlet-class>
		<load-on-startup>1</load-on-startup>
		<init-param>
			<param-name>ProxyTo</param-name>
			<param-value>http://doc.localhost/openrdf-sesame/repositories/lore</param-value>
		</init-param>
		<init-param>
			<param-name>Prefix</param-name>
			<param-value>/oreservlet/repositories/lore</param-value>
		</init-param>
	</servlet>
	<servlet-mapping>
		<servlet-name>SesameProxy</servlet-name>
		<url-pattern>/repositories/lore/*</url-pattern>
	</servlet-mapping>
	-->


	
  <servlet>
    <servlet-name>Ore</servlet-name>
    <servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
    <load-on-startup>1</load-on-startup>
  </servlet>
  
  <servlet-mapping>
    <servlet-name>Ore</servlet-name>
    <url-pattern>/ore/*</url-pattern>
  </servlet-mapping>
  
	<servlet>
		<servlet-name>Emmet</servlet-name>
		<servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
		<load-on-startup>1</load-on-startup>
	</servlet>

	<servlet-mapping>
		<servlet-name>Emmet</servlet-name>
		<url-pattern>/emmet.svc</url-pattern>
	</servlet-mapping>
  
	<servlet>
		<servlet-name>EmmetWeb</servlet-name>
		<servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
		<load-on-startup>1</load-on-startup>
	</servlet>

	<servlet-mapping>
		<servlet-name>EmmetWeb</servlet-name>
		<url-pattern>*.html</url-pattern>
	</servlet-mapping>
	
	<!--START: SECURITY-->
	<filter>
		<filter-name>springSecurityFilterChain</filter-name>
		<filter-class>org.springframework.web.filter.DelegatingFilterProxy</filter-class>
	</filter>

	<filter-mapping>
		<filter-name>springSecurityFilterChain</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>
	
	
	<!--START: WELCOME PAGE-->
	<welcome-file-list>
		<welcome-file>
      index.jsp
		</welcome-file>
	</welcome-file-list>

</web-app>