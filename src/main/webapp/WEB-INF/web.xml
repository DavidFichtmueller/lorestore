<?xml version="1.0" encoding="UTF-8"?>
<web-app id="LoreStoreOA" version="3.0" 
	xmlns="http://java.sun.com/xml/ns/j2ee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee http://java.sun.com/xml/ns/j2ee/web-app_2_4.xsd">

	<display-name>lorestore</display-name>
	<description>
    lorestore provides a REST like interface for storing ORE resource maps and OA annotations
    </description>


	<!--START: CONTEXT PARAMS-->
	<context-param>
		<param-name>contextConfigLocation</param-name>
		<param-value>/WEB-INF/Emmet-security.xml</param-value>
	</context-param>
	<context-param>
		<param-name>contextConfigProperties</param-name>
		<param-value>classpath:build.properties,classpath:default-emmet-substitution.properties,classpath:substitution.properties</param-value>
	</context-param>

	<listener>
		<listener-class>au.edu.diasb.chico.config.ContextLoaderListener</listener-class>
	</listener>
	
    <listener>
        <listener-class>net.metadata.openannotation.lorestore.servlet.ContextDestroyedListener</listener-class>
    </listener>
    
	<filter>
		<filter-name>Encoding Filter</filter-name>
		<filter-class>org.springframework.web.filter.CharacterEncodingFilter</filter-class>
		<init-param>
			<param-name>encoding</param-name>
			<param-value>UTF-8</param-value>
		</init-param>

	</filter>
	<filter-mapping>
		<filter-name>Encoding Filter</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>
	
	<servlet>
		<servlet-name>LoreStore</servlet-name>
		<servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
		<load-on-startup>1</load-on-startup>
	</servlet>
  
	<servlet-mapping>
		<servlet-name>LoreStore</servlet-name>
		<url-pattern>/ore/*</url-pattern>
	</servlet-mapping>
  
  
	<servlet-mapping>
		<servlet-name>LoreStore</servlet-name>
		<url-pattern>/oreadmin/*</url-pattern>
	</servlet-mapping>
	
    <servlet-mapping>
        <servlet-name>LoreStore</servlet-name>
        <url-pattern>/oa/*</url-pattern>
    </servlet-mapping>
    
    <servlet-mapping>
        <servlet-name>LoreStore</servlet-name>
        <url-pattern>/ids/*</url-pattern>
    </servlet-mapping>
    
	<!-- Emmet is used for user authentication and management. -->
	<servlet>
		<servlet-name>Emmet</servlet-name>
		<servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
		<load-on-startup>1</load-on-startup>
	</servlet>

	<servlet-mapping>
		<servlet-name>Emmet</servlet-name>
		<url-pattern>/emmet.svc</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>LorestoreWeb</servlet-name>
		<servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
		<load-on-startup>3</load-on-startup>
	</servlet>

	<servlet-mapping>
		<servlet-name>LorestoreWeb</servlet-name>
		<url-pattern>/</url-pattern>
	</servlet-mapping>
    
	<!--START: SECURITY-->
	<filter>
		<filter-name>springSecurityFilterChain</filter-name>
		<filter-class>org.springframework.web.filter.DelegatingFilterProxy</filter-class>
	</filter>

	<filter-mapping>
		<filter-name>springSecurityFilterChain</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>

	<!--START: WELCOME-->
	<welcome-file-list>
		<welcome-file>index.html</welcome-file>
	</welcome-file-list>

</web-app>
