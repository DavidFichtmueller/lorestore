<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans-3.0.xsd"
    default-lazy-init="true">
    
    <!-- This wiring file configures the password strength / quality checker. -->
    
    <!-- Modified from default by Damien 29/3/2011 
       
       - Remove the dictionary check
       - shorten the minimum length to 5
       - remove the username rule
       -->
   

    <import resource="siteTailoring.xml" />
    
    <bean id="passwordChecker" class="au.edu.diasb.emmet.VTMiddlewarePasswordChecker">
        <property name="rules">
            <list>
                <bean class="edu.vt.middleware.password.LengthRule">
                    <property name="minimumLength" value="5"/>
                </bean>
<!--                
                <bean class="edu.vt.middleware.password.DigitCharacterRule">
                    <property name="numberOfCharacters" value="1"/>
                </bean>
                <bean class="edu.vt.middleware.password.AlphabeticalCharacterRule">
                    <property name="numberOfCharacters" value="3"/>
                </bean>
                
-->
            </list>
        </property>
    </bean>
    
    
</beans>