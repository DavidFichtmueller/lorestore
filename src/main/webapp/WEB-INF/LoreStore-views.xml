<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans-3.0.xsd"
       default-lazy-init="true">
    
    <bean id="ore" class="net.metadata.openannotation.lorestore.servlet.OREResponseView"/>
    <bean id="oac" class="net.metadata.openannotation.views.OACNamedGraphsView"/>
    
    <bean id="oreAtom" class="net.metadata.openannotation.views.OREAtomFeedView" />
    <bean id="oacAtom" class="net.metadata.openannotation.views.OACAtomFeedView" />
    
    <bean id="oreRssUnused" class="org.springframework.web.servlet.view.xslt.XsltView">
    	<property name="url" value="/WEB-INF/xsl/rss.xsl"/>
    	<property name="indent" value="true" />
        <property name="sourceKey" value="xmlData" />
    </bean>
    
</beans>